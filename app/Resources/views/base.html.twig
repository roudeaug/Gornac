        <title>{% block title %}Gornac.com{% endblock %}</title>
        
        {% block stylesheets %}
            <!-- Google Font -->
            <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Permanent+Marker">
            <!-- Material Icons -->
            <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Material+Icons">
